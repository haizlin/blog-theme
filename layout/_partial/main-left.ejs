<div class="main-left fn-l">
    <div class="space"></div>
    <div class="left-list">
        <header>
            <p class="logo"><a href="/"><img src="<%= theme.avatar %>"></a></p>
            <p class="nickname">浪子神剑</p>
            <p class="autograph">越简单越快乐, 越努力越幸运!</p>
        </header>

        <p class="line"></p>

        <div class="search">
            <input type="text" readonly id="search-text" placeholder="Search">
        </div>
        
        <div class="social">
            <a href="javascript:void(0);" title="" class="weixin"><img src="/images/ico_weixin.png" alt="">
                <div class="weixin-qrcode" id="weixin-qrcode">
                    <p>更多精彩尽在这里</p>
                    <img style="width:160px;background:#fff;" src="<%= theme.weixin.qrcode %>" alt="<%= theme.weixin.tip %>">
                    <p>“前端剑解”公众号</p>
                </div>
            </a>
            <a href="#" title="新浪"><img src="/images/ico_sina.png" alt=""></a>
            <a href="<%= theme.github %>" target="_blank" title="github"><img src="/images/ico_github.png" alt="github"></a>
        </div>

        <nav>
            <%
                var category = '';
                if(page.archive){
                    category = 'archives';
                }else if(is_post() && page.categories['data'].length > 0){
                    category = page.categories['data'][0].name
                }else{
                    category = page.category || page.layout;
                }
            %>
            <% for (var i in theme.menu){ %>
              <a href="<%- url_for(theme.menu[i]) %>" class="<%= main_nav(category, theme.menu[i]) %>"><%= i %></a>
            <% } %>
        </nav>
    </div>

    <footer>
        <p>Hexo Theme <a href="<%= theme.blog_theme %>" target="_blank">Haizlin</a> by <a href="<%= theme.blog_theme %>" target="_blank">浪子夫人</a></p>
    </footer>
</div>